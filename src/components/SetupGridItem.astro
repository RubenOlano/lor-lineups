---
import { getAgentImage } from "@/util/agents";
import { getMapImage } from "@/util/maps";
import { Image } from "astro:assets";

type Props = {
	title: string;
	agent: string;
	map: string;
	site: "A" | "B" | "C";
	isAttacking: boolean;
	isUlt: boolean;
	slug: string;
};

const { title, agent, site, map, isAttacking, isUlt, slug } =
	Astro.props as Props;
---

<a
	class="bg-white pb-4 rounded-lg shadow-lg transition-transform duration-300 hover:scale-105 hover:shadow-xl flex flex-col items-center"
	href={`/setup/${slug}`}
	title={`View details for ${title}`}
>
	<div class="relative mb-4">
		<Image
			src={getMapImage(map)}
			alt={map}
			class="w-full h-full rounded-t-lg object-cover mb-4 shadow-md"
			width="400"
			height="200"
		/>
		<Image
			src={getAgentImage(agent)}
			alt={agent}
			class="w-20 h-20 rounded-full shadow-md absolute -bottom-10 left-1/2 transform -translate-x-1/2 border-4 border-white"
			class:list={[
				{ "bg-red-400": isAttacking, "bg-blue-300": !isAttacking },
				{
					"border-red-400": isAttacking,
					"border-blue-300": !isAttacking,
				},
			]}
			width="80"
			height="80"
		/>
	</div>
	<div class="pt-10 text-center">
		<h2
			class="text-2xl font-bold text-gray-900 text-center line-clamp-2 mb-2"
			transition:name={title}
		>
			{title}
		</h2>
		<p class="text-lg font-bold mb-1 text-gray-800">
			{agent} - {map} - Site {site}
		</p>
		<p class="text-base text-gray-600">
			{isAttacking ? "Attacking" : "Defending"} - {
				isUlt ? "Ultimate" : "Regular"
			} Setup
		</p>
	</div>
</a>
