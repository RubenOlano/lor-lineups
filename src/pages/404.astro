---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Page Not Found">
    <main class="flex flex-col items-center justify-center p-6">
        <div class="max-w-md text-center p-8">
            <h1 class="text-6xl font-extrabold text-gray-900 mb-4">404</h1>
            <h2 class="text-2xl font-semibold text-gray-800 mb-4">
                Page Not Found
            </h2>
            <p class="text-lg text-gray-700 mb-6">
                Oops! The page you're looking for doesn't exist or has been
                moved.
            </p>
            <a
                href="/"
                class="text-blue-500 hover:underline focus:outline-none focus:ring-2 focus:ring-blue-600 focus:ring-offset-2 focus:ring-offset-white"
            >
                Go Back to Homepage
            </a>
        </div>
    </main>
</BaseLayout>
